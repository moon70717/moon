import android.app.Activity;
import android.os.Bundle;
import android.widget.ImageButton;
import android.widget.LinearLayout;

public class MainActivity extends Activity {

    @Override
    protected void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        int arr[]=new int[12];
        String[] icons={"img1","img2","img3","img4","img5","img6","img_d"};
        ImageButton btns[]=new ImageButton[12];
        btns[0] = (ImageButton)findViewById(R.id.btn1);
        btns[1] = (ImageButton)findViewById(R.id.btn2);
        btns[2] = (ImageButton)findViewById(R.id.btn3);
        btns[3] = (ImageButton)findViewById(R.id.btn4);

        setContentView(R.layout.activity_main);
        ImageButton btn1=(ImageButton)findViewById(R.id.btn1);
//        btn1.setImageResource(R.drawable.img1);
        LinearLayout layout = (LinearLayout) findViewById(R.id.layout);
        int temp=0;

        for(int i=0;i<12;i++){//들어갈 이미지의 번호를 지정한다
            int ran=(int)(Math.random()*6);
            for(int j=0;j<i;j++){
                if(arr[j]==ran) {
                    temp++;
                }
                else if (arr[j] == ran) {
                    temp++;
                }
            }
            if(temp==0)
                arr[i]=ran;
            else if(temp==1)
                arr[i]=ran;
            else
                i--;
//            temp=0;
        }
        int startbtn =R.id.btn1;
        for (int i = 0; i <12; i++) {//이미지를 변경하는부분
            int resId = getResources().getIdentifier(icons[i], "drawable",
                    "com.example.myapplication");
                ImageButton te = (ImageButton)findViewById(startbtn);
                startbtn++;
            ImageButton button = (ImageButton)findViewById(R.id.btn1);
            ImageButton image = new ImageButton(this);
            te.setImageResource(resId);
        }
    }
}
