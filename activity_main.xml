<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.pc.myapplication.MainActivity">

    <TextView
        android:layout_width="380dp"
        android:layout_height="120dp"
        android:text="0"
        android:textSize="20dp"
        android:id="@+id/textView" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="c"
        android:id="@+id/button"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="/"
        android:id="@+id/button2"
        android:layout_below="@+id/textView"
        android:layout_toEndOf="@+id/button" />
    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="*"
        android:id="@+id/button3"
        android:layout_below="@+id/textView"
        android:layout_toEndOf="@+id/button2" />
    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="-"
        android:id="@+id/button4"
        android:layout_below="@+id/textView"
        android:layout_toEndOf="@+id/button3" />

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="7"
        android:id="@+id/button5"
        android:layout_below="@+id/button"
        android:layout_alignParentStart="true" />
    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="8"
        android:id="@+id/button6"
        android:layout_below="@+id/button2"
        android:layout_toEndOf="@+id/button5" />
    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="9"
        android:id="@+id/button7"
        android:layout_below="@+id/button3"
        android:layout_toEndOf="@+id/button6" />
    <Button
        android:layout_width="80dp"
        android:layout_height="160dp"
        android:text="+"
        android:id="@+id/button8"
        android:layout_below="@+id/button4"
        android:layout_toEndOf="@+id/button7" />
    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="4"
        android:id="@+id/button9"
        android:layout_below="@+id/button5"
        android:layout_alignParentStart="true" />
    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="5"
        android:id="@+id/button10"
        android:layout_below="@+id/button6"
        android:layout_toEndOf="@+id/button9" />
    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="6"
        android:id="@+id/button11"
        android:layout_below="@+id/button7"
        android:layout_toEndOf="@+id/button10" />
    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="1"
        android:id="@+id/button12"
        android:layout_below="@+id/button10"
        android:layout_alignParentStart="true" />
    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="2"
        android:id="@+id/button13"
        android:layout_below="@+id/button11"
        android:layout_toEndOf="@+id/button12"/>
    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="3"
        android:id="@+id/button14"
        android:layout_below="@+id/button11"
        android:layout_toEndOf="@+id/button13"/>
    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="="
        android:id="@+id/button15"
        android:layout_below="@+id/button11"
        android:layout_toEndOf="@+id/button14"/>
    <Button
        android:layout_width="160dp"
        android:layout_height="80dp"
        android:text="0"
        android:id="@+id/button16"
        android:layout_below="@+id/button12"
        android:layout_alignParentStart="true" />
    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="."
        android:id="@+id/button17"
        android:layout_below="@+id/button14"
        android:layout_toEndOf="@+id/button16"/>
    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="빼기"
        android:id="@+id/b"
        android:layout_below="@+id/button15"
        android:layout_toEndOf="@+id/button17"/>
</RelativeLayout>
